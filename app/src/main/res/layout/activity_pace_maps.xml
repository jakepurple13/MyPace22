<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <AutoCompleteTextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/address"
            android:inputType="text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:hint="Find ex 'class' "
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical" />


        <Button
            style="@android:style/Widget.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:id="@+id/Bsearch"
            android:onClick="onSearch"
            android:clickable="true" />

        <ToggleButton
            style="@android:style/Widget.Button"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:id="@+id/Toggle"
            android:layout_gravity="right"
            android:nestedScrollingEnabled="false"
            android:background="@drawable/toggle_off"
            android:clickable="true"
            android:onClick="changeMap"
            android:textOn="@string/toggleNYC"
            android:textOff="@string/togglePLV" />

        <Button
            style="@android:style/Widget.Button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/satellite"
            android:layout_gravity="right"
            android:nestedScrollingEnabled="false"
            android:onClick="changeType"
            android:text="Satellite"
            android:background="@drawable/globe"
            android:textColor="#000000"
            android:clickable="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/map"
            tools:context=".GoogleMaps"
            android:name="com.google.android.gms.maps.SupportMapFragment" />

    </LinearLayout>
</LinearLayout>