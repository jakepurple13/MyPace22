<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:id="@+id/main"
    android:background="@drawable/mainmenu2">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/tutoring_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Math"
            android:id="@+id/Profile"
            android:textSize="37dp"
            android:textColor="@color/PaceYellow"
            android:background="#000000"
            android:elegantTextHeight="false"
            android:clickable="true"
            android:textStyle="bold|italic"
            android:layout_marginBottom="20dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Password"
            android:id="@+id/SettingsPassword"
            android:textColor="@color/need2feedbuttonmain"
            android:background="#000000"
            android:textSize="37dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:textStyle="bold|italic" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Language"
            android:id="@+id/SettingsLanguage"
            android:textColor="@color/need2feedbuttonmain"
            android:background="#000000"
            android:textSize="37dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:textStyle="bold|italic" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Notifications"
            android:id="@+id/Notifications"
            android:textColor="@color/need2feedbuttonmain"
            android:background="#000000"
            android:textSize="37dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:textStyle="bold|italic" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Logout"
            android:id="@+id/login_button"
            android:textColor="#000000"
            android:background="@color/need2feedbuttonmain"
            android:textSize="37dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:textStyle="bold|italic" />

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
