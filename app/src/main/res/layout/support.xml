<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/main_bg1"
    android:id="@+id/supportpace">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">


        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Academic"
            android:id="@+id/academicbutt"
            android:textColor="#FFFFFFFF"
            android:background="@color/PaceBlue"
            android:textSize="37dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:textStyle="bold|italic"
            android:onClick="onClick" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Culture"
            android:id="@+id/SettingsLanguage"
            android:textColor="#FFFFFFFF"
            android:background="@color/PaceBlue"
            android:textSize="37dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:textStyle="bold|italic" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/FinancialAid"
            android:id="@+id/k"
            android:textSize="37dp"
            android:textColor="#FFFFFFFF"
            android:background="@color/PaceBlue"
            android:elegantTextHeight="false"
            android:clickable="true"
            android:textStyle="bold|italic"
            android:layout_marginBottom="20dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Personel"
            android:id="@+id/Notifications"
            android:textColor="#FFFFFFFF"
            android:background="@color/PaceBlue"
            android:textSize="37dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:textStyle="bold|italic" />


    </LinearLayout>

</RelativeLayout>
