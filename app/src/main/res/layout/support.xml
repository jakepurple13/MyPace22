<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/Pace_blue_light_2"
    android:id="@+id/supportpace">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/linearLayout">


        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Academic"
            android:id="@+id/academicbutt"
            android:textColor="#FFFFFF"
            android:background="@color/PaceBlue"
            android:textSize="37dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:textStyle="bold|italic"
            android:onClick="onClick" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Culture"
            android:id="@+id/SettingsLanguage"
            android:textColor="#FFFFFFFF"
            android:background="@color/PaceBlue"
            android:textSize="37dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:textStyle="bold|italic" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/FinancialAid"
            android:id="@+id/k"
            android:textSize="37dp"
            android:textColor="#FFFFFFFF"
            android:background="@color/PaceBlue"
            android:elegantTextHeight="false"
            android:clickable="true"
            android:textStyle="bold|italic"
            android:layout_marginBottom="20dp" />


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailtableLayout"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/john_email"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/ripple_oval"
                    android:elevation="8dp"
                    android:src="@drawable/hookerhoto"
                    android:onClick="onClick"
                    android:layout_column="1"/>

                <ImageButton
                    android:id="@+id/joyce_email"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/ripple_oval"
                    android:elevation="8dp"
                    android:src="@drawable/joycephoto"
                    android:onClick="onClick"
                    android:layout_column="2"/>

                <Space
                    android:layout_width="16px"
                    android:layout_height="20px"
                    android:layout_column="0"


                    />

                <ImageButton
                    android:id="@+id/maria_email"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/ripple_oval"
                    android:elevation="8dp"
                    android:src="@drawable/mariaphoto"
                    android:onClick="onClick"
                    android:layout_column="22"/>

                <ImageButton
                    android:id="@+id/norma_email"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="16dp"

                    android:background="@drawable/ripple_oval"
                    android:elevation="8dp"
                    android:src="@drawable/normaphoto"
                    android:onClick="onClick"
                    android:layout_column="23"/>
            </TableRow>

            <TableRow
                android:layout_marginLeft="10dp">


            </TableRow>

            <TableRow android:background="@drawable/supportteam">

            </TableRow>


        </TableLayout>


    </LinearLayout>
    <!-- set to transparent color -->


</RelativeLayout>
